{
  "type": "box",
  "layout": "horizontal",
  "contents": [
    {
      "type": "text",
      "text": "${date}",
      "size": "xxs",
      "color": "#aaaaaa",
      "flex": 2
    },
    {
      "type": "text",
      "text": "${user}",
      "size": "xs",
      "flex": 2
    },
    {
      "type": "text",
      "text": "${type}",
      "size": "xxs",
      "color": "#888888",
      "flex": 3,
      "align": "center"
    },
    {
      "type": "text",
      "text": "${amount}",
      "size": "xs",
      "align": "end",
      "color": "${color}",
      "flex": 2
    }
  ]
}